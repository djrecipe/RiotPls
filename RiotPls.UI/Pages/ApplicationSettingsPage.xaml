<Page x:Class="RiotPls.UI.Pages.ApplicationSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RiotPls.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicationSettings">

    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label>Data Path</Label>
                <TextBox Grid.Column="1" Text="{Binding ContentDataPath}"/>
            </Grid>
        </StackPanel>

    </Grid>
</Page>
